<div class="row">
  <div class="col-md-4">
    <h3>Document</h3>
    <%= render 'application/entity_control_links', entity: @document %>
    <%= render 'application/entity_timestamps', entity: @document %>

    <table class="table">
      <tr>
        <td nowrap>
          <strong>Documentable:</strong>
        </td>
        <td nowrap>
          <%= link_to @document.documentable, @document.documentable %>
        </td>
      </tr>
      <tr>
        <td nowrap>
          <strong>Description:</strong>
        </td>
        <td nowrap>
          <%= @document.description %>
        </td>
      </tr>
      <tr>
        <td nowrap>
          <strong>File name:</strong>
        </td>
        <td nowrap>
          <%= link_to_if @document.document_file.file?,
            @document.document_file_file_name,
           download_document_path(@document) %>
        </td>
      </tr>
      <tr>
        <td nowrap>
          <strong>Alfresco id:</strong>
        </td>
        <td nowrap>
          <%= @document.alfresco_id %>
        </td>
      </tr>
    </table>

  </div>

  <div class="col-md-8">

    <%= render 'side_tabs' %>

  </div>
</div>
