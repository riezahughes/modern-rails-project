<%= form_for(@travel, url: add_travel_to_form_journeys_path, remote: true, html: {'data-model': 'travel', class: 'add_travel_to_form'} )do |f| %>

<div class="row">
  <div class="col-md-8">
    <div class="row">
      <div class="col-md-8">
        <div class="field form-group">
          <%= f.label :start_date, class: "control-label" %><br>
          <%= f.datetime_select :start_date, {}, class: "form-control ", tabindex: 3 %>
        </div>

        <div class="field form-group">
          <%= f.label :end_date, class: "control-label" %><br>
          <%= f.datetime_select :end_date, {}, class: "form-control ", tabindex: 5 %>
        </div>

        <div class="field form-group">
          <%= f.hidden_field :user_id, class: "form-control " %>
        </div>
      </div>

      <div class="col-md-4">
        <div class="field form-group">
          <%= f.label :origin, 'Start (From)', class: "control-label" %><br>
          <%= f.text_field :origin, class: "form-control", tabindex: 4 %>
          <span class="help-block"></span>
        </div>

        <div class="field form-group">
          <%= f.label :destination, 'End (To)', class: "control-label" %><br>
          <%= f.text_field :destination, class: "form-control", tabindex: 6 %>
          <span class="help-block"></span>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3">
        <div class="field form-group">
          <%= f.label :travel_method, class: "control-label" %><br>
          <%= f.select :travel_method_id, options_from_collection_for_select(TravelMethod.all, :id, :name, @travel.travel_method_id), {}, {class: "form-control"} %>
        </div>
      </div>

      <div class="col-md-3">
        <div class="field form-group">
          <%= f.label :mileage, class: "control-label" %><br>
          <%= f.number_field :mileage, class: "form-control" %>
          <span class="help-block"></span>
        </div>
      </div>

      <div class="col-md-3">
        <div class="field form-group">
          <%= f.label :parking_costs, class: "control-label" %><br>
          <%= f.text_field :parking_costs, class: "form-control" %>
          <span class="help-block"></span>
        </div>
      </div>

      <div class="col-md-3">
        <div class="field form-group">
          <%= f.label :other_costs, class: "control-label" %><br>
          <%= f.text_field :other_costs, class: "form-control" %>
          <span class="help-block"></span>
        </div>
      </div>

    </div>

    <div class="actions form-group pull-right">
      <%= f.button :submit, class: "btn btn-default" do %>
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add log
      <% end %>
    </div>
  </div>
</div>
<% end %>
