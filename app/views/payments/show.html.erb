<div class="row">
  <div class="col-md-4">
    <h3>Payment</h3>
    <%= render 'application/entity_control_links', entity: @payment %>
    <%= render 'application/entity_timestamps', entity: @payment %>

    <table class="table">
      <tr>
        <td nowrap>
          <strong>Claim:</strong>
        </td>
        <td nowrap>
          <%= link_to @payment.claim, @payment.claim %>
        </td>
      </tr>
      <tr>
        <td nowrap>
          <strong>Payment date:</strong>
        </td>
        <td nowrap>
          <%= @payment.payment_date %>
        </td>
      </tr>
      <tr>
        <td nowrap>
          <strong>Fee amount:</strong>
        </td>
        <td nowrap>
          <%= @payment.fee_amount %>
        </td>
      </tr>
      <tr>
        <td nowrap>
          <strong>Outlay amount:</strong>
        </td>
        <td nowrap>
          <%= @payment.outlay_amount %>
        </td>
      </tr>
    </table>
  </div>
</div>
