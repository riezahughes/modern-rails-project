<% if notifiable.registered_for_notification? %>
    <%= link_to polymorphic_url(notifiable, action: :unregister_for_notification), method: :post, class: 'btn btn-default', title: 'Unregister for notification' do %>
        <span class="glyphicon glyphicon-bell" aria-hidden="true"></span><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
    <% end %>
<% else %>
    <%= link_to polymorphic_url(notifiable, action: :register_for_notification), method: :post, class: 'btn btn-default btn-success', title: 'Register for notification' do %>
        <span class="glyphicon glyphicon-bell" aria-hidden="true"></span><span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
    <% end %>
<% end %>