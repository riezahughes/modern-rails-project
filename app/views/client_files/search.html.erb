<h1>Search client files</h1>

<p>
<%= search_form_for @search do |f| %>

<div class="row">
  <div class="col-md-8">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group field form-group-lg">
          <%= f.search_field :file_number_eq, class: 'form-control', placeholder: 'File Number', autofocus: true %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group form-group-lg">
          <%= f.submit 'Search', class: 'btn btn-default btn-lg' %>
          <% if can? :create, ClientFile %>
            <%= link_to 'New Client File', new_client_file_path, class: 'btn btn-default btn-lg' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<% end %>
</p>
