<h1>Uploaded Disclosure Documents</h1>
<p class="lead">Apply numbering and upload to document store (File Number: <%= @disclosure_owner.file_number %>)</p>
<p><%= link_to 'Back to file', @disclosure_owner %></p>

<%= form_tag upload_to_document_store_client_file_path, method: :patch, remote: true, class: 'form-inline' do %>
    <table class="table" id="disclosures_table">
      <tbody>
      <%= render partial: 'disclosures/table_rows', locals: {disclosures: @disclosure_owner.disclosures} %>
      </tbody>
    </table>

    <% unless @disclosure_owner.disclosures.blank? %>
        <div id="upload-to-document-store-placeholder">
          <div class="actions form-group" id="upload-to-document-store-submit">
            <%= submit_tag 'Upload', class: "btn btn-default" %>
          </div>
        </div>
    <% end %>
<% end %>
