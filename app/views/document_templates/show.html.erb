<div class="row">
  <div class="col-md-6">
    <h3>Document template</h3>
    <%= render 'application/entity_control_links', entity: @document_template %>
    <%= render 'application/entity_timestamps', entity: @document_template %>

    <table class="table">
      <tr>
        <td nowrap>
          <strong>Name:</strong>
        </td>
        <td nowrap>
          <%= @document_template.name %>
        </td>
      </tr>
      <tr>
        <td nowrap>
          <strong>Template Type:</strong>
        </td>
        <td nowrap>
          <%= @document_template.template_type %>
        </td>
      </tr>
      <tr>
        <td nowrap>
          <strong>Documents using this template:</strong>
        </td>
        <td nowrap>
          <%= @document_template.templated_documents.attached_to_documentable.count %>
        </td>
      </tr>
      <tr>
        <td nowrap>
          <strong>Category:</strong>
        </td>
        <td nowrap>
          <%= @document_template.category %>
        </td>
      </tr>
      <tr>
        <td nowrap>
          <strong>File name:</strong>
        </td>
        <td nowrap>
          <%= link_to_if @document_template.template_file.file?,
            @document_template.template_file_file_name,
           download_document_template_path(@document_template) %>
        </td>
      </tr>
    </table>

  </div>
  <div class="col-md-8">

    <%= render 'side_tabs' %>

  </div>
</div>
