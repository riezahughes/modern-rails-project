<h1>Search clients</h1>

<%= search_form_for @search do |f| %>

<div class="row">
  <div class="col-md-8">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group field form-group-lg">
          <%= f.search_field :person_forename_scope, class: 'form-control', placeholder: 'Firstname', autofocus: true %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group field form-group-lg">
          <%= f.search_field :person_surname_scope, class: 'form-control', placeholder: 'Lastname' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group field form-group-lg">
          <%= f.search_field :birth_date_scope, class: 'form-control', placeholder: 'DOB (DD/MM/YYY)' %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group field form-group-lg">
          <%= f.search_field :national_insurance_number_scope, class: 'form-control', placeholder: 'NI Number' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group field form-group-lg">
          <%= f.search_field :client_file_scope, class: 'form-control', placeholder: 'File Number' %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group form-group-lg">
          <%= f.submit 'Search', class: 'btn btn-default btn-lg' %>
          <% if can? :create, Client %>
            <%= link_to 'New Client', new_client_path, class: 'btn btn-default btn-lg' %>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>

<% end %>
